<h2>Edit Historical Landmark</h2>

<h2>Edits for <%= @landmark.name %></h2>

  <form action="/landmark/<%= @landmark.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Landmark's Name:</label>
    <input type="text" name="landmark[name]" value="<%= @landmark.name %>">

    <br>

    <label>Edit the Landmark's Figure:</label>
    <input type="text" name="landmark[figure_id]" value="<%= @landmark.figure_id %>">

    <br>

    <label>Edit the Landmark's Completed Year:</label>
    <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed.to_s %>">
    
    <br>

    <input type="submit" value="Edit Landmark">
  </form>


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
