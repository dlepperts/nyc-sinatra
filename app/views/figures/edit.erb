<h2>Edit Figure</h2>

<h2>Edits for <%= @figure.name %></h2>

  <form action="/figure/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Figure's Name:</label>
    <input type="text" name="figure[name]" value="<%= @figure.name %>">

    <br>


    <input type="submit" value="Edit Figure">
  </form>


<a class="button" href="/figures">Figures</a>
